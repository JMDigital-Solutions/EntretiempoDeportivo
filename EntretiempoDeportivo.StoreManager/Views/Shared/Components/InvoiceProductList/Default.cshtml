    </tbody>
</table>
<div class="right">
    <p id="lblTotal">Total: <b>$ @Model.Total</b></p>
</div>

<div class="row">
    <div class="col s12">
        <button class="btn waves-effect waves-light modal-trigger" type="button" name="confirmSale" href="#modal" onclick="openConfirmSaleModal(@Model.Total)">
            Confirmar Venta<i class="material-icons right">send</i>
        </button>
    </div>
</div>

<!-- Modal Structure -->
<div id="modal" class="modal">
    <div class="modal-content">
        <h5>Confirmar venta</h5>
        <hr />
        <br />
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="Total" id="txtTotalPrice" type="text" name="Total">
                <label asp-for="Total">Total</label>
            </div>
            <div class="input-field col s6">
                <select asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<PaymentMethod>()"></select>
                <label asp-for="PaymentMethod">Forma de pago</label>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="modal-action modal-close waves-effect waves-green btn-flat">Cancelar</a>
        <a id="btnConfirmSaleModal" class="modal-action modal-close waves-effect waves-green btn-flat">Confirmar</a>
    </div>
</div>